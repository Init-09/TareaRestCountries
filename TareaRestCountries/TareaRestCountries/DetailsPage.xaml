<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="TareaRestCountries.DetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="IMG" HeightRequest="100" Margin="26" WidthRequest="100"/>
            <Label x:Name="NAME" HorizontalTextAlignment="Center"/>
            <Label x:Name="CAPITAL" Margin="4" FontSize="Small"/>
            <Label x:Name="POBLA" Margin="4" FontSize="Small"/>
            <Label x:Name="MONEDA" Margin="4" FontSize="Small"/>
            <Label x:Name="LENGUA" Margin="4" FontSize="Small"/>
            <Button Text="Ver" 
                        x:Name="list" 
                        Margin="0,10,0,0"
                        CornerRadius="190"
                        BackgroundColor="SteelBlue"
                        TextColor="White" />
            <maps:Map IsShowingUser="True" x:Name="map" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"   />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>